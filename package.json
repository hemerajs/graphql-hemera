    "eslint": "^4.19.1",
    "eslint-config-hemera": "0.0.6",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "apollo-server": "^2.3.1",
    "apollo-server-hapi": "^2.3.1",
    "graphql": "^14.0.2",
