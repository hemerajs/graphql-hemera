{
  "name": "hemera-graphql",
  "version": "1.0.1",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "nodemon ./src/index.js --exec babel-node ./src --out-dir ./build --copy-files --source-maps",
    "watch": "babel -w ./src --out-dir ./build --copy-files --source-maps",
    "build": "babel ./src --out-dir ./build --copy-files --source-maps",
    "lint": "standard --fix",
    "patch": "np patch --yolo",
    "minor": "np minor --yolo",
    "major": "np major --yolo"
  },
  "author": "Dustin Deus <deusdustin@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "6.26.x",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-istanbul": "4.1.x",
    "babel-preset-env": "1.6.x",
    "babel-register": "6.26.x",
    "nodemon": "^1.12.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "apollo-server": "0.3.x",
    "graphql": "0.11.x",
    "graphql-server-hapi": "^1.1.2",
    "graphql-tools": "^2.0.0",
    "hapi": "^16.6.2",
    "hemera-joi": "^2.0.0",
    "nats": "0.7.x",
    "nats-hemera": "^2.0.0-0"
  },
  "standard": {
    "ignore": [
      "**/node_modules/"
    ],
    "envs": [
      "es6",
      "node",
      "mocha"
    ],
    "globals": []
  }
